@model AlimentosMvc.Models.AlimentosViewModel;

@{
    ViewBag.Title = "Novo Alimento";
}

<h2>Adicionar novo alimento</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class = "form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control label col-md-2"})
        <div class= "col-md-6">
            @Html.DropDownListFor(model => model.Classe, Html.GetEnumSelectList(typeof(AlimentosMvc.Enuns.ClasseEnum)), "====Selecione=====", new { @class = "form-control" })
        </div>
    </div>

    <div class ="form-group">
        <div class = "col-md-offset-2 col-md-6">
            <input type="subtmit" value="Salvar" class="btn-btn-primary">
        </div>
    </div>

}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>